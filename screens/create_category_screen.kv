<CreateCategoryScreen>:
    name: 'create_category_screen'
    FloatLayout:
        FloatLayout:
            size_hint: None, None
            size: root.width * 0.9, root.height * 0.9
            center: self.parent.center
            canvas:
                Color:
                    rgba: 0.5, 0.5, 0.5, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                id: main_box
                orientation: 'vertical'
                pos: self.parent.pos
                canvas:
                    Color:
                        rgba: 1, 0, 0, 0
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Widget:
                BoxLayout:
                    size_hint_y: None
                    height: 40
                    padding: 10
                    spacing: 10
                    canvas:
                        Color:
                            rgba: 0, 0, 1, 0
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        font_size: 20
                        size_hint_y: None
                        height: 30
                        text: 'Nazwa kategorii'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    TextInput:
                        id: name
                        multiline: False
                        font_size: 15
                        size_hint_y: None
                        height: 30
                BoxLayout:
                    size_hint_y: None
                    height: 80
                    spacing: 10
                    padding: 10
                    canvas:
                        Color:
                            rgba: 0, 0, 1, 0
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    BoxLayout:
                        orientation: 'vertical'
                        canvas:
                            Color:
                                rgba: 0, 0, 1, 0
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        Label:
                            font_size: 20
                            size_hint_y: None
                            height: 30
                            text: 'Opis'
                            canvas:
                                Color:
                                    rgba: 1, 0, 0, 0.5
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                        Widget:
                    TextInput:
                        id: description
                        multiline: True
                        font_size: 15
                        size_hint_y: None
                        height: 60
                BoxLayout:
                    size_hint_y: None
                    height: 40
                    padding: 10
                    spacing: 10
                    canvas:
                        Color:
                            rgba: 0, 0, 1, 0
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        font_size: 20
                        size_hint_y: None
                        size_hint_x: 2
                        height: 30
                        text: 'Typ'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    ToggleButton:
                        id: expense_category
                        text: 'wydatek'
                        group: 'category_type'
                        state: 'down'
                    ToggleButton:
                        id: income_category
                        text: 'przychód'
                        group: 'category_type'
                BoxLayout:
                    size_hint_y: None
                    height: 50
                    padding_y: 20
                    spacing: 10
                    canvas:
                        Color:
                            rgba: 0, 0, 1, 0.5
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Button:
                        font_size: 20
                        size_hint_y: None
                        size_hint_x: 0.5
                        height: 30
                        text: 'Powrót'
                        on_release: app.root.current = 'menu_screen'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Button:
                        font_size: 20
                        size_hint_y: None
                        size_hint_x: 0.5
                        height: 30
                        text: 'Dodaj'
                        on_release: root.add_category(root.ids.name, root.ids.description, root.ids.expense_category, root.ids.income_category)
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                Widget:
                Label:
                    id: message
                    font_size: 20
                    size_hint_y: None
                    height: 30
                    text: ''
                    canvas:
                        Color:
                            rgba: 1, 0, 0, 0.5
                        Rectangle:
                            pos: self.pos
                            size: self.size
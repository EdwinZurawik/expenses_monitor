<CreateExpenseScreen>:
    name: 'create_expense_screen'
    FloatLayout:
        FloatLayout:
            size_hint: None, None
            size: root.width * 0.9, root.height * 0.9
            center: self.parent.center
            canvas:
                Color:
                    rgba: 0.5, 0.5, 0.5, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                orientation: 'vertical'
                pos: self.parent.pos
                canvas:
                    Color:
                        rgba: 1, 0, 0, 0
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Widget:
                BoxLayout:
                    size_hint_y: None
                    height: 40
                    padding: 10
                    spacing: 10
                    canvas:
                        Color:
                            rgba: 0, 0, 1, 0
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        font_size: 20
                        size_hint_y: None
                        height: 30
                        text: 'Nazwa'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    TextInput:
                        id: name
                        multiline: False
                        font_size: 15
                        size_hint_y: None
                        height: 30
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                BoxLayout:
                    size_hint_y: None
                    height: 40
                    padding: 10
                    spacing: 10
                    canvas:
                        Color:
                            rgba: 0, 0, 1, 0
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        font_size: 20
                        size_hint_y: None
                        height: 30
                        text: 'Data'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    TextInput:
                        id: date
                        multiline: False
                        font_size: 15
                        size_hint_y: None
                        height: 30
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                FloatLayout:
                    size_hint_y: None
                    height: 100
                    center: self.parent.center
                    canvas:
                        Color:
                            rgba: 0, 0, 1, 0.5
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    BoxLayout:
                        padding: 10
                        spacing: 10
                        pos: self.parent.pos
                        BoxLayout:
                            orientation: 'vertical'
                            Label:
                                text: 'Opis'
                                size_hint_y: None
                                height: 30
                                font_size: 20
                                canvas:
                                    Color:
                                        rgba: 0.2, 0.1, 0.3, 0.5
                                    Rectangle:
                                        pos: self.pos
                                        size: self.size
                            Widget:
                        TextInput:
                            id: description
                            multiline: True
                            font_size: 15
                            canvas:
                                Color:
                                    rgba: 1, 0, 0, 0.5
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                BoxLayout:
                    size_hint_y: None
                    height: 40
                    spacing: 10
                    padding: 10
                    canvas:
                        Color:
                            rgba: 0, 0, 1, 0
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        font_size: 20
                        size_hint_y: None
                        height: 30
                        text: 'Zapłacone przez:'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Button:
                        id: payers_btn
                        text: 'Wybierz'
                        on_release: root.populate_dropdown()
                BoxLayout:
                    size_hint_y: None
                    height: 40
                    spacing: 10
                    padding: 10
                    canvas:
                        Color:
                            rgba: 0, 0, 1, 0
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        font_size: 20
                        size_hint_y: None
                        height: 30
                        text: 'Grupa:'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    TextInput:
                        id: group_id
                        font_size: 15
                        size_hint_y: None
                        height: 30
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                BoxLayout:
                    size_hint_y: None
                    height: 40
                    spacing: 10
                    padding: 10
                    canvas:
                        Color:
                            rgba: 0, 0, 1, 0
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        font_size: 20
                        size_hint_y: None
                        height: 30
                        text: 'Kategoria:'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        font_size: 20
                        size_hint_y: None
                        height: 30
                        text: 'Jedzenie'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                BoxLayout:
                    size_hint_y: None
                    height: 40
                    spacing: 10
                    padding: 10
                    canvas:
                        Color:
                            rgba: 0, 0, 1, 0
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        font_size: 20
                        size_hint_y: None
                        height: 30
                        text: 'Kwota:'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        font_size: 20
                        size_hint_y: None
                        height: 30
                        text: '10zł'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                BoxLayout:
                    size_hint_y: None
                    height: 40
                    spacing: 10
                    padding: 10
                    canvas:
                        Color:
                            rgba: 0, 0, 1, 0
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        font_size: 20
                        size_hint_y: None
                        height: 30
                        text: 'Metoda płatności:'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        font_size: 20
                        size_hint_y: None
                        height: 30
                        text: 'Karta'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                BoxLayout:
                    size_hint_y: None
                    height: 50
                    padding_y: 20
                    spacing: 10
                    canvas:
                        Color:
                            rgba: 0, 0, 1, 0.5
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Button:
                        font_size: 20
                        size_hint_y: None
                        size_hint_x: 0.5
                        height: 30
                        text: 'Edytuj'
                        on_release:
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Button:
                        font_size: 20
                        size_hint_y: None
                        size_hint_x: 0.5
                        height: 30
                        text: 'Usuń'
                        on_release:
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: None
                    Widget:
                    Button:
                        font_size: 20
                        size_hint_y: None
                        height: 30
                        text: 'Powrót'
                        on_release: app.root.current = 'expenses_list_screen'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Widget:
                Widget:

<CustomDropdown>:
    DropDown:
        id: payers
        canvas:
            Color:
                rgba: 1, 0, 0, 0.5
            Rectangle:
                pos: self.pos
                size: self.size
        on_select: mainbtn.text = f'{args[1]}'
<EditExpenseScreen>:
    name: 'edit_expense_screen'
    FloatLayout:
        FloatLayout:
            size_hint: None, None
            size: root.width * 0.9, root.height * 0.9
            center: self.parent.center
            canvas:
                Color:
                    rgba: 0.5, 0.5, 0.5, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                orientation: 'vertical'
                pos: self.parent.pos
                canvas:
                    Color:
                        rgba: 1, 0, 0, 0
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Widget:
                BoxLayout:
                    size_hint_y: None
                    height: 40
                    padding: 10
                    spacing: 10
                    canvas:
                        Color:
                            rgba: 0, 0, 1, 0
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        font_size: 20
                        size_hint_y: None
                        height: 30
                        text: 'Nazwa'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    TextInput:
                        id: name
                        multiline: False
                        font_size: 15
                        size_hint_y: None
                        height: 30
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                BoxLayout:
                    size_hint_y: None
                    height: 40
                    padding: 10
                    spacing: 10
                    canvas:
                        Color:
                            rgba: 0, 0, 1, 0
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        font_size: 20
                        size_hint_y: None
                        height: 30
                        text: 'Data'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    TextInput:
                        id: date
                        multiline: False
                        font_size: 15
                        size_hint_y: None
                        height: 30
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                FloatLayout:
                    size_hint_y: None
                    height: 100
                    center: self.parent.center
                    canvas:
                        Color:
                            rgba: 0, 0, 1, 0
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    BoxLayout:
                        padding: 10
                        spacing: 10
                        pos: self.parent.pos
                        BoxLayout:
                            orientation: 'vertical'
                            Label:
                                text: 'Opis'
                                size_hint_y: None
                                height: 30
                                font_size: 20
                                canvas:
                                    Color:
                                        rgba: 1, 0, 0, 0.5
                                    Rectangle:
                                        pos: self.pos
                                        size: self.size
                            Widget:
                        TextInput:
                            id: description
                            multiline: True
                            font_size: 15
                            canvas:
                                Color:
                                    rgba: 1, 0, 0, 0.5
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                BoxLayout:
                    size_hint_y: None
                    height: 40
                    spacing: 10
                    padding: 10
                    canvas:
                        Color:
                            rgba: 0, 0, 1, 0
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        font_size: 20
                        size_hint_y: None
                        height: 30
                        text: 'Zapłacone przez:'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    ButtonWithData:
                        id: payers_btn
                        text: 'Wybierz'
                BoxLayout:
                    size_hint_y: None
                    height: 40
                    spacing: 10
                    padding: 10
                    canvas:
                        Color:
                            rgba: 0, 0, 1, 0
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        font_size: 20
                        size_hint_y: None
                        height: 30
                        text: 'Grupa:'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    ButtonWithData:
                        id: groups_btn
                        text: 'Wybierz'
                        Widget:
                BoxLayout:
                    size_hint_y: None
                    height: 40
                    spacing: 10
                    padding: 10
                    canvas:
                        Color:
                            rgba: 0, 0, 1, 0
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        font_size: 20
                        size_hint_y: None
                        height: 30
                        text: 'Kategoria:'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    ButtonWithData:
                        id: categories_btn
                        text: 'Wybierz'
                BoxLayout:
                    size_hint_y: None
                    height: 40
                    spacing: 10
                    padding: 10
                    canvas:
                        Color:
                            rgba: 0, 0, 1, 0
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        font_size: 20
                        size_hint_y: None
                        height: 30
                        text: 'Kwota:'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    FloatInput:
                        id: amount
                        multiline: False
                        font_size: 15
                        size_hint_x: 0.7
                        size_hint_y: None
                        height: 30
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Label:
                        font_size: 20
                        size_hint_y: None
                        size_hint_x: 0.3
                        height: 30
                        text: 'zł'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                BoxLayout:
                    size_hint_y: None
                    height: 40
                    spacing: 10
                    padding: 10
                    canvas:
                        Color:
                            rgba: 0, 0, 1, 0
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        font_size: 20
                        size_hint_y: None
                        height: 30
                        text: 'Metoda płatności:'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    ButtonWithData:
                        id: payment_methods_btn
                        text: 'Wybierz'
                BoxLayout:
                    size_hint_y: None
                    height: 50
                    padding_y: 20
                    spacing: 10
                    canvas:
                        Color:
                            rgba: 0, 0, 1, 0.5
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Button:
                        font_size: 20
                        size_hint_y: None
                        size_hint_x: 0.5
                        height: 30
                        text: 'Powrót'
                        on_release: app.root.current = 'expense_details_screen'
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    Button:
                        font_size: 20
                        size_hint_y: None
                        size_hint_x: 0.5
                        height: 30
                        text: 'Zapisz zmiany'
                        on_release: root.update_expense(root.ids.name, root.ids.date, root.ids.description, root.ids.amount)
                        canvas:
                            Color:
                                rgba: 1, 0, 0, 0.5
                            Rectangle:
                                pos: self.pos
                                size: self.size
                Widget:
                Label:
                    id: message
                    font_size: 20
                    size_hint_y: None
                    height: 30
                    text: ''
                    canvas:
                        Color:
                            rgba: 1, 0, 0, 0.5
                        Rectangle:
                            pos: self.pos
                            size: self.size

<CustomDropdown>:
    DropDown:
        id: payers
        canvas:
            Color:
                rgba: 1, 0, 0, 0.5
            Rectangle:
                pos: self.pos
                size: self.size
        on_select: mainbtn.text = f'{args[1]}'
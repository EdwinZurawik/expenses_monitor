<CreateExpenseScreen>:
    name: 'create_expense_screen'
    VerticalBoxLayout:
        Widget:
        CenteredTextField:
            id: name
            multiline: False
            hint_text: 'Nazwa'
        CenteredTextField:
            id: date
            multiline: False
            hint_text: 'Data'
            CenteredTextField:
                id: description
                multiline: True
                font_size: 15
        HorizontalBoxLayout:
            CenteredLabel:
                text: 'Zapłacone przez:'
            ButtonWithData:
                id: payers_btn
                text: 'Wybierz'
        HorizontalBoxLayout:
            CenteredLabel:
                text: 'Grupa:'
            ButtonWithData:
                id: groups_btn
                text: 'Wybierz'
        HorizontalBoxLayout:
            CenteredLabel:
                text: 'Kategoria:'
            ButtonWithData:
                id: categories_btn
                text: 'Wybierz'
        FloatInput:
            id: amount
            multiline: False
            hint_text: 'Kwota (zł)'
        HorizontalBoxLayout:
            CenteredLabel:
                text: 'Metoda płatności:'
            ButtonWithData:
                id: payment_methods_btn
                text: 'Wybierz'
        HorizontalBoxLayout:
            adaptive_size: True
            pos_hint: {'center_x': .5, 'center_y': .5}
            CenteredButton:
                text: 'Powrót'
                on_release: app.root.current = 'expenses_list_screen'
            CenteredButton:
                text: 'Dodaj'
                on_release: root.add_expense(root.ids.name, root.ids.date, root.ids.description, root.ids.amount)
        Widget:
        CenteredErrorLabel:
            id: message

<EditGroupScreen>:
    name: 'edit_group_screen'
    VerticalBoxLayout:
        CenteredTextField:
            id: name
            hint_text: 'Nazwa grupy'
        CenteredMultilineTextField:
            size_hint_y: 2
            id: description
            hint_text: 'Opis'
        GridLayout:
            cols: 3
            size_hint_x: 0.9
            row_default_height: 30
            CenteredLabel:
                text: 'Typ rozliczenia'
            ToggleButton:
                id: settlement_percent
                height: 30
                size_hint_y: None
                text: 'procentowe'
                group: 'settlement_type'
                state: 'down'
            ToggleButton:
                height: 30
                size_hint_y: None
                id: settlement_value
                text: 'kwotowe'
                group: 'settlement_type'
        VerticalBoxLayout:
            size_hint_y: 5
            CenteredButton:
                text: 'Dodaj'
                on_release: root.add_user_field()
            HorizontalBoxLayout:
                adaptive_height: True
                pos_hint: {'center_x': .5, 'center_y': .5}
                CenteredLabel:
                    text: 'Użytkownik'
                CenteredLabel:
                    text: 'Kwota/procent'
                CenteredLabel:
                    text: 'Priorytet'
                CenteredLabel:
                    text: 'Usuń'
            ScrollView: # wypełniony członkami grupy
                size_hint_x: 0.9
                pos_hint: {'center_x': .5, 'center_y': .5}
                GridLayout:
                    spacing: 5
                    cols: 4
                    size_hint_y: None
                    row_default_height: 30
                    height: self.minimum_height
                    id: box
        HorizontalBoxLayout:
            adaptive_size: True
            pos_hint: {'center_x': .5, 'center_y': .5}
            CenteredButton:
                text: 'Powrót'
                on_release: app.root.current = 'groups_list_screen'
            CenteredButton:
                text: 'Dodaj'
                on_release: root.add_group(root.ids.name, root.ids.description, root.ids.settlement_percent, root.ids.settlement_value)
        CenteredErrorLabel:
            id: message

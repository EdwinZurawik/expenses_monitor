<IncomeDetailsScreen>:
    name: 'income_details_screen'
    VerticalBoxLayout:
        Widget:
        HorizontalBoxLayout:
            CenteredLabel:
                id: name
                text: 'Nazwa'
            CenteredLabel:
                id: date
        FloatLayout:
            size_hint_y: None
            height: 100
            center: self.parent.center
            BoxLayout:
                padding: 10
                pos: self.parent.pos
                ScrollableLabel:
                    id: description
                    pos: self.parent.pos
                    canvas:
                        Color:
                            rgba: 0.2, 0.1, 0.3, 0.25
                        Rectangle:
                            pos: self.pos
                            size: self.size
        CenteredLabel:
            id: group
        CenteredLabel:
            id: category
        CenteredLabel:
            id: amount
        HorizontalBoxLayout:
            adaptive_size: True
            pos_hint: {'center_x': .5, 'center_y': .5}
            CenteredButton:
                text: 'Edytuj'
                on_release: app.root.current = 'edit_income_screen'
            CenteredButton:
                text: 'Usuń'
                on_release:
        CenteredButton:
            text: 'Powrót'
            on_release: app.root.current = 'incomes_list_screen'
        Widget:

<LoginScreen>:
    name: 'login_screen'
    VerticalBoxLayout:
        Widget:
        CenteredTextField:
            id: username
            multiline: False
            hint_text: 'Nazwa konta'
        CenteredTextField:
            id: password
            multiline: False
            password: True
            hint_text: 'Hasło'
        CenteredButton:
            text: 'Zaloguj się'
            on_release: root.login(root.ids.username, root.ids.password)
        CenteredButton:
            text: 'Nie masz konta? Zarejestruj się'
            on_release: app.root.current = 'create_account_screen'
        CenteredButton:
            text: 'Wyjdź'
            on_release: app.stop()
        Widget:
        CenteredErrorLabel:
            id: message

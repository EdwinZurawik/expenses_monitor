<MenuScreen>:
    name: 'menu_screen'
    FloatLayout:
        FloatLayout:
            size_hint: None, None
            size: root.width * 0.9, root.height * 0.9
            center: self.parent.center
            canvas:
                Color:
                    rgba: 0.5, 0.5, 0.5, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                spacing: 3
                padding: 10
                orientation: 'vertical'
                pos: self.parent.pos
                canvas:
                    Color:
                        rgba: 1, 0, 0, 0
                    Rectangle:
                        pos: self.pos
                        size: self.size
                Widget:
                Button:
                    size_hint_y: None
                    font_size: 20
                    height: 30
                    text: 'Wydatki'
                    on_release: app.root.current = 'expenses_list_screen'
                    canvas:
                        Color:
                            rgba: 1, 0, 0, 0.5
                        Rectangle:
                            pos: self.pos
                            size: self.size
                Button:
                    size_hint_y: None
                    font_size: 20
                    height: 30
                    text: 'Przychody'
                    on_release: app.root.current = 'incomes_list_screen'
                    canvas:
                        Color:
                            rgba: 1, 0, 0, 0.5
                        Rectangle:
                            pos: self.pos
                            size: self.size
                Button:
                    size_hint_y: None
                    font_size: 20
                    height: 30
                    text: 'Raporty'
                    on_release:
                    canvas:
                        Color:
                            rgba: 1, 0, 0, 0.5
                        Rectangle:
                            pos: self.pos
                            size: self.size
                Button:
                    font_size: 20
                    size_hint_y: None
                    height: 30
                    text: 'Dodaj kategorię'
                    on_release: app.root.current = 'create_category_screen'
                    canvas:
                        Color:
                            rgba: 1, 0, 0, 0.5
                        Rectangle:
                            pos: self.pos
                            size: self.size
                Button:
                    font_size: 20
                    size_hint_y: None
                    height: 30
                    text: 'Dodaj użytkownika'
                    on_release: app.root.current = 'create_user_screen'
                    canvas:
                        Color:
                            rgba: 1, 0, 0, 0.5
                        Rectangle:
                            pos: self.pos
                            size: self.size
                Button:
                    font_size: 20
                    size_hint_y: None
                    height: 30
                    text: 'Dodaj grupę'
                    on_release: app.root.current = 'create_group_screen'
                    canvas:
                        Color:
                            rgba: 1, 0, 0, 0.5
                        Rectangle:
                            pos: self.pos
                            size: self.size
                Button:
                    font_size: 20
                    size_hint_y: None
                    height: 30
                    text: 'Dodaj metodę płatności'
                    on_release: app.root.current = 'create_payment_method_screen'
                    canvas:
                        Color:
                            rgba: 1, 0, 0, 0.5
                        Rectangle:
                            pos: self.pos
                            size: self.size
                Widget:
                    size_hint_y: None
                    height: 10
                Button:
                    size_hint_y: None
                    font_size: 20
                    height: 30
                    text: 'Wyloguj się'
                    on_release: app.root.logout()
                    canvas:
                        Color:
                            rgba: 1, 0, 0, 0.5
                        Rectangle:
                            pos: self.pos
                            size: self.size
                Button:
                    size_hint_y: None
                    font_size: 20
                    height: 30
                    text: 'Wyjdź'
                    on_release: app.stop()
                    canvas:
                        Color:
                            rgba: 1, 0, 0, 0.5
                        Rectangle:
                            pos: self.pos
                            size: self.size
                Widget:
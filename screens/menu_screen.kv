<MenuScreen>:
    name: 'menu_screen'
    VerticalBoxLayout:
        ScrollView:
            MDList:
                OneLineListItem:
                    text: 'Wydatki'
                    on_release: app.root.current = 'expenses_list_screen'
                OneLineListItem:
                    text: 'Przychody'
                    on_release: app.root.current = 'incomes_list_screen'
                OneLineListItem:
                    text: 'Raporty'
                    on_release: app.root.current = 'report_screen'
                OneLineListItem:
                    text: 'Kategorie'
                    on_release: app.root.current = 'categories_list_screen'
                OneLineListItem:
                    text: 'Użytkownicy'
                    on_release: app.root.current = 'users_list_screen'
                OneLineListItem:
                    text: 'Grupy'
                    on_release: app.root.current = 'groups_list_screen'
                OneLineListItem:
                    text: 'Metody płatności'
                    on_release: app.root.current = 'payment_methods_list_screen'
        HorizontalBoxLayout:
            adaptive_size: True
            pos_hint: {'center_x': .5, 'center_y': .5}
            CenteredButton:
                text: 'Wyloguj się'
                on_release: app.root.logout()
            CenteredButton:
                text: 'Wyjdź'
                on_release: app.stop()
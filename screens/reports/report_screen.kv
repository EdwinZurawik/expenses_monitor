<ReportScreen>:
    name: 'report_screen'
    VerticalBoxLayout:
        CenteredLabel:
            id: report_name
            text: 'Panel raportów'
        CenteredButton:
            text: "Wybierz zakres dat"
            on_release: root.show_datepicker()
        CenteredLabel:
            id: date_from
            text: 'Początkowa data: ' + root.date_from
        CenteredLabel:
            id: date_to
            text: 'Końcowa data: ' + root.date_to
        HorizontalBoxLayout:
            CenteredLabel:
                text: 'Grupa:'
            ButtonWithData:
                id: groups_btn
                text: 'Wybierz'
        HorizontalBoxLayout:
            CenteredLabel:
                text: 'Raport:'
            ButtonWithData:
                id: reports_btn
                text: 'Wybierz'
        HorizontalBoxLayout:
            Button:
                text: 'Powrót'
                on_release: app.root.current = 'menu_screen'
            Button:
                text: 'Generuj raport'
                on_release: root.print_report()
        Widget:
            size_hint_y: 0.5
        ScrollView:
            size_hint_y: 3
            GridLayout:
                spacing: 5
                cols: 1
                col_default_width: self.width
                row_default_height: 20
                size_hint_y:None
                height: self.minimum_height
                id: box
        CenteredLabel:
            id: summary
        Widget:
        CenteredErrorLabel:
            id: message

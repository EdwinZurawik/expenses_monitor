<ReportScreen>:
    name: 'Raport'
    VerticalBoxLayout:
        CenteredLabel:
            id: report_name
            text: 'Raport'
        CenteredTextField:
            id: date_from
            hint_text: 'Początkowa data'
        CenteredTextField:
            id: date_to
            hint_text: 'Końcowa data'
        HorizontalBoxLayout:
            CenteredLabel:
                text: 'Grupa:'
            ButtonWithData:
                id: groups_btn
                text: 'Wybierz'
        HorizontalBoxLayout:
            Button:
                text: 'Powrót'
                on_release: app.root.current = 'reports_list_screen'
            Button:
                text: 'Generuj raport'
                on_release: root.print_report(date_from, date_to)
        Widget:
            size_hint_y: 0.5
        ScrollView:
            size_hint_y: 3
            GridLayout:
                spacing: 5
                cols: 1
                orientation: 'vertical'
                col_default_width: self.width
                row_default_height: 20
                size_hint_y:None
                height: self.minimum_height
                id: box
        CenteredLabel:
            id: summary
        Widget:
        CenteredErrorLabel:
            id: message

<BalanceReportScreen>:
    name: 'balance_report_screen'

<SettlementReportScreen>:
    name: 'settlement_report_screen'

<PaymentMethodReportScreen>:
    name: 'payment_method_report_screen'